<div class="special-title text-center">
    <h4>S.P.E.C.I.A.L</h4>
</div>
<div class="special-indicators">
    <h4 class="text-center">Strength</h4>
    <div class="strength-indicator">
        <div class="progress">
            <div class="progress-bar"
                 role="progressbar"
                 aria-valuenow="60"
                 aria-valuemin="0"
                 aria-valuemax="100"
                 style="width: {{ strength_bar_value }}%;">
                {{ strength_value }}
            </div>
        </div>
    </div>
    <div class="agility-indicator">
        <h4 class="text-center">Agility</h4>
        <div class="progress">
            <div class="progress-bar"
                 role="progressbar"
                 aria-valuenow="60"
                 aria-valuemin="0"
                 aria-valuemax="100"
                 style="width: {{ agility_bar_value }}%;">
                {{ agility_value }}
            </div>
        </div>
    </div>
    <div class="perceive-indicator">
        <h4 class="text-center">Perceive</h4>
        <div class="progress">
            <div class="progress-bar"
                 role="progressbar"
                 aria-valuenow="60"
                 aria-valuemin="0"
                 aria-valuemax="100"
                 style="width: {{ perceive_bar_value }}%;">
                {{ perceive_value }}
            </div>
        </div>
    </div>
    <div class="luck-indicator">
        <h4 class="text-center">Luck</h4>
        <div class="progress">
            <div class="progress-bar"
                 role="progressbar"
                 aria-valuenow="60"
                 aria-valuemin="0"
                 aria-valuemax="100"
                 style="width: {{ luck_bar_value }}%;">
                {{ luck_value }}
            </div>
        </div>
    </div>
</div>