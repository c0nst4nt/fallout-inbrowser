{% extends '::base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/bundles/game/styles/main.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('/bundles/game/scripts.js') }}"></script>
    <script src="{{ asset('/bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script>console.log(Routing.generate('discover_search'));</script>
{% endblock %}
{% block body %}
<div class="container">
    <div class="col-md-12">
        <div class="row">
            <h2 class="text-center">Fallout game</h2>
        </div>
        <div class="col-md-6 player-interface">
            <div class="row">
                <div class="top-menu-block">
                    <div class="level-indicator"></div>
                    <div class="experience-indicator"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 left-menu-block">
                    {% include '@Game/special.block.html.twig' %}
                </div>
                <div class="col-md-3 col-md-offset-1 avatar"
                     style="background: url({{ asset('bundles/game/images/characters.png') }}) no-repeat"></div>
                <div class="col-md-1 col-md-offset-1 right-menu-block">
                    <div class="action-buttons">
                        <input type="button" name="discover" value="Discover" class="btn btn-success">
                        <input type="button" name="sleep" value="Sleep" class="btn btn-primary">
                        <input type="button" name="fight" value="Fight" class="btn btn-danger">
                        <input type="button" name="escape" value="Escape" class="btn btn-warning">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="bottom-menu-block">
                    <div class="col-md-4">
                        <div class="fight-data">
                            <div class="attack-value">Attack: {{ current_attack }}</div>
                            <div class="distance-value">Distance to attack: {{ max_steps }}</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="vitals-block">
                            <div class="life-indicator">
                                <h4>Life</h4>
                                <div class="progress">
                                    <div class="progress-bar"
                                         role="progressbar"
                                         aria-valuenow="60"
                                         aria-valuemin="0"
                                         aria-valuemax="100"
                                         style="width: {{ life_bar_value }}%;">
                                        {{ life_value }}
                                    </div>
                                </div>
                            </div>
                            <div class="moves-indicator">
                                <h4>Moves left</h4>
                                <div class="progress">
                                    <div class="progress-bar"
                                         role="progressbar"
                                         aria-valuenow="60"
                                         aria-valuemin="0"
                                         aria-valuemax="100"
                                         style="width: {{ moves_value }}%;">
                                        {{ moves_value }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 actions-block">
            <div class="title-block">
                <h2 class="text-center">Pip Boy console</h2>
            </div>
            <div class="erase-block">
                <input type="button" name="erase" class="btn btn-default" value="Clear console">
            </div>
            <div class="console-block">
                {% autoescape %}
                {{ console_initial_content|raw }}
                {% endautoescape %}
            </div>
        </div>
    </div>
</div>
{% endblock %}